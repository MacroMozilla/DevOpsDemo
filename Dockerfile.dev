FROM python:3.11-slim

# Author information
LABEL maintainer="harry"
LABEL description="Development Django DevOps Demo with debugging tools"

# Set environment variables for development
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DEBUG=True

# Set the working directory inside the container
WORKDIR /app

# Install system dependencies including debugging tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    curl \
    vim \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency file first to leverage Docker cache
COPY requirements.txt .

# Install Python dependencies plus development tools
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir \
    ipython \
    ipdb \
    django-debug-toolbar \
    django-extensions

# Copy the entire Django project into the container
COPY . .

# Expose port 8000 for Django dev server
EXPOSE 8000

# Start the Django development server with hot reload
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
